<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-cover flex items-center justify-center"
        style="background-image: url('https://images.unsplash.com/photo-1615184697985-c9bde1b07da7?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')">
        <div class="w-[26vw] bg-white px-20 py-10 rounded-[30px]">
            <h1 class="text-3xl text-center tracking-tighter font-semibold text-zinc-700 capitalize leading-none">
                Welcome To Pinterest</h1>
            <form action="/login" method="post">
                <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="username"
                    placeholder="username">
                <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="password" name="password"
                    placeholder="password">
                <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">Forgot password</a>
                <input class="border-2 rounded-md mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full"
                    type="submit" value="login">
                <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree
                    to Pinterest's Terms of Service; Opens a new tab and acknowledge that you've read our Privacy Policy
                    Notice at collection; Opens a new tab.</p>
            </form>
            <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Don't
                have an Account</a>
        </div>
    </div>
    <% include ./partials/footer.ejs %>