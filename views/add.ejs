<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl">Create New Post.</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input type="file" class="  block w-1/3 px-3 py-2" name="postimage">
            <input type="text" class=" text-black block w-1/3 px-3 py-2 mt-3 border-2 rounded-md" placeholder="Title" name="title">
            <textarea type="text" class=" text-black w-1/3 px-3 py-2 mt-3 border-2 rounded-md" placeholder="Description" name="description"></textarea>
            <input type="submit" class=" block w-1/3 px-3 py-2 mt-3 bg-red-700 rounded-md" value="Create Post">
        </form>
    </div>

